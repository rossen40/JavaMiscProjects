<mvc:View controllerName="DamageCalculator.controller.WolfCalculator" displayBlock="true" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<Page title="Wolf damage calculator" class="sapUiSmallMarginBegin">
		<HBox>
			<Label text="{i18n>castleLevel}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<Input value="{wolf>/castleLevel}" type="Number" />
		</HBox>
		<HBox>
			<Label text="{i18n>troopsAmount}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<Input value="{wolf>/troopsAmount}" type="Number" />
		</HBox>
		<HBox>
			<Label text="{i18n>useMarchCapacityBoost}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<CheckBox selected="{wolf>/useMarchCapacityBoost}" />
		</HBox>
		<HBox>
			<Label text="{i18n>useMarchCapacitySpell}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<CheckBox selected="{wolf>/useMarchCapacitySpell}" />
		</HBox>
		<HBox>
			<Label text="{i18n>maxTier}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<Input value="{wolf>/maxTier}" type="Number" />
		</HBox>
		<HBox>
			<Label text="{i18n>troopAttack}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<Input value="{wolf>/troopAttack}" type="Number" />
		</HBox>
		<HBox>
			<Label text="{i18n>cavalryAttack}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<Input value="{wolf>/cavalryAttack}" type="Number" />
		</HBox>
		<HBox>
			<Label text="{i18n>distanceAttack}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<Input value="{wolf>/distanceAttack}" type="Number" />
		</HBox>
		<HBox>
			<Label text="{i18n>artilleryAttack}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<Input value="{wolf>/artilleryAttack}" type="Number" />
		</HBox>
		<HBox>
			<Label text="{i18n>troopDamage}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<Input value="{wolf>/troopDamage}" type="Number" />
		</HBox>
		<HBox>
			<Label text="{i18n>infantryDamage}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<Input value="{wolf>/infantryDamage}" type="Number" />
		</HBox>
		<HBox>
			<Label text="{i18n>cavalryDamage}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<Input value="{wolf>/cavalryDamage}" type="Number" />
		</HBox>
		<HBox>
			<Label text="{i18n>distanceDamage}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<Input value="{wolf>/distanceDamage}" type="Number" />
		</HBox>
		<HBox>
			<Label text="{i18n>artilleryDamage}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<Input value="{wolf>/artilleryDamage}" type="Number" />
		</HBox>
		<HBox>
			<Label text="{i18n>distanceVsInfantryDamage}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<Input value="{wolf>/distanceVsInfantryDamage}" type="Number" />
		</HBox>
		<HBox>
			<Label text="{i18n>cavalryVsInfantryDamage}" class="sapUiSmallMarginTop sapUiTinyMarginEnd" />
			<Input value="{wolf>/cavalryVsInfantryDamage}" type="Number" />
		</HBox>

		<Button text="Calculate" press=".onCalculatePress" type="Emphasized" class="sapUiSmallMargin" />
		<Button text="Back to Home page" press=".onHomePress" type="Emphasized" class="sapUiSmallMargin" />
		<Table items="{path: 'wolf>/armies'}">
			<columns>
				<Column>
					<Text text="Type" />
				</Column>
				<Column>
					<Text text="Subtype" />
				</Column>
				<Column>
					<Text text="Tier" />
				</Column>
				<Column>
					<Text text="Number" />
				</Column>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<Text text="{wolf>type}" />
						<Text text="{wolf>subType}" />
						<Text text="{wolf>tier}" />
						<Text text="{wolf>number}" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</mvc:View>